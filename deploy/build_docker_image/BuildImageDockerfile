FROM python:3.6

RUN cd / && wget http://download.redis.io/releases/redis-6.0.4.tar.gz && tar xzf redis-6.0.4.tar.gz && cd redis-6.0.4 && make

RUN pip install Django==2.0.5 redis==3.5.2 -i https://pypi.douban.com/simple/

RUN cp /usr/share/zoneinfo/Asia/Shanghai /etc/localtime
RUN dpkg-reconfigure -f noninteractive tzdata

